{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "frame-ancestors https://telegram.org https://*.telegram.org;"
        },
        {
          "key": "X-Frame-Options",
          "value": "ALLOW-FROM https://telegram.org https://*.telegram.org"
        }
      ]
    }
  ]
} 